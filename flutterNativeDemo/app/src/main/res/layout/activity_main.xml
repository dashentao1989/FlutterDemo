<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/click_boost_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_first_boost"/>

    <Button
        android:id="@+id/click_boost_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_second_boost"/>

    <Button
        android:id="@+id/click_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_view"/>

    <Button
        android:id="@+id/click_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_fragment"/>



</LinearLayout>